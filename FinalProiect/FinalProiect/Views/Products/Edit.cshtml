@model Incercare2Proiect.Models.Product

@{
    ViewBag.Title = "Edit";
}


<form method="post" action="/Products/Edit/@Model.ProductId">

    @Html.HttpMethodOverride(HttpVerbs.Put)
    <br />
    @Html.HiddenFor(m => m.ProductId)

    @Html.Label("Nume", "Nume produs")
    <br />
    @Html.EditorFor(m => m.Nume)
    @Html.ValidationMessageFor(m => m.Nume, "", new { @class = "text-danger" })
    <br /><br />

    @Html.Label("ImageName", "Nume imagine")
    <br />
    @Html.EditorFor(m => m.ImageName)
    @Html.ValidationMessageFor(m => m.ImageName, "", new { @class = "text-danger" })
    <br /><br />
    @Html.Label("Pret", "Pret produs")
    <br />
    @Html.EditorFor(m => m.Pret)
    @Html.ValidationMessageFor(m => m.Pret, "", new { @class = "text-danger" })
    <br /><br />
    @Html.Label("Descriere", "Descriere produs")
    <br />
    @Html.Editor("Descriere", new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(m => m.Descriere, "", new { @class = "text-danger" })
    <br /><br />
    <label>Selectati categoria</label>
    @Html.DropDownListFor(m => m.CategoryId,
    new SelectList(Model.Categ, "Value", "Text"),
    "Selectati categoria", new { @class = "form-control" })
    <br />
    <button class="btn btn-sm btn-success" type="submit">Modifica produs</button>

</form>

