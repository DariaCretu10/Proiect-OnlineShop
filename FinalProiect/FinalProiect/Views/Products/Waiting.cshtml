
@{
                /**/

                ViewBag.Title = "Waiting";
}

<h2>Produse in curs de analizare</h2>

@foreach (var product in ViewBag.Products)
{
    if (product.Accept == false)
    {<div class="card-default" style="width: 32rem; background-color:rgba(128, 128, 128, 0.2); padding:35px; margin-bottom:20px;">
    <img class="card-img-top" src="/Content/UploadedImages/@product.ImageName" alt="Card image cap" width="240" height="300">
    <div class="card-default-body">
        <h2 class="card-default-title">@product.Nume</h2>
        <p class="card-default-title"><strong>Pret : </strong>@product.Pret</p>
        <p class="card-default-title">@product.Descriere</p>
        <p class="card-default-title"><p class="glyphicon glyphicon-tag"></p>  @product.Category.CategoryName</p>

        <form method="post" action="/Products/Acceptare/@product.ProductId">
            @Html.HttpMethodOverride(HttpVerbs.Put)
            <button class="categ pull-left" type="submit" style="padding:5px;">Acceptare</button>
        </form>
        <form method="post" action="/Products/Delete/@product.ProductId">
            @Html.HttpMethodOverride(HttpVerbs.Delete)
            <button class="stergeCateg pull-right" type="submit" style="padding:5px;">Sterge</button>
        </form>
    </div>
    </div>
    <br />
    <hr />
    <br />
    }


    }

