@model Incercare2Proiect.Models.Category
@{
    ViewBag.Title = "Lista categorii";
}
@if (TempData.ContainsKey("message"))
{
    <h1 >@ViewBag.message</h1>
}
<h2>@ViewBag.Title</h2>

@foreach (var category in ViewBag.Categories)
{
    @Html.Label("CategoryName", "Denumire categorie")
    <p>@category.CategoryName</p>
    <a class="afisCateg" href="/Categories/Show/@category.CategoryId">Afisare categorie</a>
    <a class="stergeCateg" href="/Categories/Edit/@category.CategoryId">Editare categorie</a>
    <br />
    <hr />
}
<br />
<a class="categ" href="/Categories/New">Adauga o noua categorie</a>
<a class="categ2" href="/Products/Index">Lista produse</a>
<br />

